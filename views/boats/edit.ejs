<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= boat.name %></h1>
        <div style="width: 30%; margin: 15px auto;">
            <form action="/boats/<%= boat._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="boat[name]" placeholder="name" value="<%= boat.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="boat[image]" placeholder="image url" value="<%= boat.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="boat[price]" value="<%= boat.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="boat[description]" placeholder="description" value="<%= boat.description %>">
                </div>
                <div class="form-group">
                    <button class="btn-block btn btn-lg btn-primary">Submit</button>
                </div>
            </form>
            <a href="/boats"> Go back </a>
        </div>
    </div>
</div>


<%- include('../partials/footer') %>